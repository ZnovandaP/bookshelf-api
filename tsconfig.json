{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["src/*"],
      "*": ["node_modules/*"]
    },
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "dist/*"]
}
